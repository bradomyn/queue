	//std::cout << "		sink ";
	//t.print();
	//std::cout << std::endl;

	//Job *job = check_and_cast<Job *>(msg);

	double arrivalTime = static_cast<double>( tv.tv_sec ) + static_cast<double>( tv.tv_usec )/1E6;

	// extract time from jobname
	std::string jobname = std::string(msg->getName());
